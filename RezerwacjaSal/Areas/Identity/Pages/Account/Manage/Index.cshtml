@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
}
@Html.Partial("_StatusMessage", Model.StatusMessage)

<h4>Profil numer @Model.ApplicationUser.Number</h4>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @*<div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>*@
            <div class="form-group">
                <label asp-for="Input.Email">Email (nazwa użytkownika):</label>
                        <input asp-for="Input.Email" class="form-control"/>


                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ApplicationUser.FirstName">Imię</label>
                <input asp-for="ApplicationUser.FirstName" class="form-control" />
                <span asp-validation-for="ApplicationUser.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ApplicationUser.LastName">Nazwisko</label>
                <input asp-for="ApplicationUser.LastName" class="form-control" />
                <span asp-validation-for="ApplicationUser.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.PhoneNumber">Numer telefonu</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Zapisz</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
