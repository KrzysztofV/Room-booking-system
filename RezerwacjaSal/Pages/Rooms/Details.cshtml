@page 
@model RezerwacjaSal.Pages.Rooms.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h3>Szczegóły</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Numer:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.Number)
        </dd>
        <dt>
            Rodzaj:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.Type)
        </dd>
        <dt>
            Ilość miejsc:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.Spots)
        </dd>
        <dt>
            Wyposażenie:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.Equipment)
        </dd>
        <dt>
            Adres:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.Building.Address)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-default" asp-page="Index" asp-route-buildingid="@Model.BuildingIdRoute" asp-route-departmentid="@Model.DepartmentIdRoute">Lista pokoi</a>
</div>
