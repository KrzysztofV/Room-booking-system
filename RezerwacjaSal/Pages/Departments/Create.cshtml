@page 
@model RezerwacjaSal.Pages.Departments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h3>Dodaj nowy wydział</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nazwa</label>
                <input asp-for="Department.Name" class="form-control" />
                <span asp-validation-for="Department.Name" class="text-danger"></span>
                <span class="text-danger">@Model.DuplicateNameExistError</span>
            </div>
            <div class="form-group">
                <label class="control-label">Numer administratora</label>
                <input asp-for="Department.Administrator" class="form-control" />
                <span asp-validation-for="Department.Administrator" class="text-danger"></span>
                <span class="text-danger">@Model.AdministratorIdError</span>
            </div>
            <div class="form-group">
                <label class="control-label">Numer kierownika</label>
                <input asp-for="Department.Manager" class="form-control" />
                <span asp-validation-for="Department.Manager" class="text-danger"></span>
                <span class="text-danger">@Model.ManagerIdError</span>
            </div>

            <div class="form-group">
                <a class="btn btn-default" asp-page="Index">Lista wydziałów</a>
                <input type="submit" value="Utwórz" class="btn btn-default btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
